sprite "arrow sprite" // начало блока описания спрайта, имя спрайта.
	path "Knife.png" // путь к файлу спрайта.
	size 2, 1.5 // размер спрайта относительно хитбокса объекта будет в 2 раза шире и в 1.5 раза выше.
end // конец блока.

sprite "Enemy Sprite" 
	path "Tako.png"
end

projectile "awesome projectile" // начало блока описания шаблона снаряда.
	set sprite "arrow sprite" // устаналивает для снаряда ранее загруженный спрайт. Если не использовать команду, то снаряд будет иметь стандартный предзагруженный спрайт.
	set color "aquamarine" // устанавливает цвет снаряда. Если не использовать команду, то снаряд будет иметь исходный цвет загруженного спрайта.
	set hitbox 12 // устанавливает размер хитбокса снаряда. Если использовать команду, то снаряд будет иметь стандарнтый хибоксу равный 24.
	set velocity 200 // устанавливает скалярное значение скорости снаряда.
	set acceleration 10 + genTime / 0.25 // устанаваливает скалярное значение ускорения, которое по умолчанию сонаправлено вектору скорости. При этом значение ускорения зависит от свойства снаряда genTime.
	runtime 5 - genTime // все команды до runtime выполняет следом друг за другом. При достижении команды runtime, снаряд приостановит выполнение команд на указанное время (в секундах).
	velocityToPlayer // изменяет направление скорости в текущую позицию игроку. Скалярное значение скорости остаётся неизменным.
	inc acceleration 20 * random // увеличивает скалярное значение ускорения на величину 20*random, где random принимает случайное вещественное значение от 0 до 1.
	inc velocityAngle -5 // увеличивает угол скорости на -5. Все угловые характеристики в шаблоне задаются в градусах.
	randomcolor // устанавливает случайный цвет снаряда.
	runtime 1 // описанные выше команды будут выполняться в течение 1 секунды.
	pointRotation 0, 100 // с сохранением скаляра скорости устанавливает параметры для движения по окружности (по часовой стрелке) вокруг точки (0, 100). Для движения против часовой стрелки предназначена команда pointCounterRotation.
	inc accelerationAngle 10 // увеличивает угол между векторами усорения и скорости на 10 градусов.
	runtime 2
	destroy // уничтожает объект.
end

generator "awesome generator" // начало блока описания шаблона генератора снарядов.
	set angle 180 // устанавливает угол поворота генератора. Угол берется от направленного вертикально вниз вектора. То есть приведенная команда установит генератор по направлению вертикально вверх.
	set sector 360 // устанавливает сектор окружности, вдоль которого на равном растоянии будут размещены снаряды; центр сектора соответствует текущего углу поворота генератора.
	set spawnCount 12 // устанавливает кол-во снарядов, которое единовременно размещается вдоль сектора.
	set spawnDelay 0.25 // устанавливает задержку между размещением снарядов в секундах.
	set projectile "awesome projectile" // устанавливает для размещаемых снарядов ранее заданным шаблон.
	repeatStart // задает точку программы, к которой вернется генератор после выполнения всех команд шаблона.
	set rotationSpeed 45 // задаёт угловую скорость генератора. Положительное направление - против часовой стрелки.
	set rotationAcceleration 5 // задаёт угловое ускорение генератора.
	runtime 3
	pause 0.5 // устанавливает время бездействия для объекта в секундах.
	set rotationSpeed -45
	set rotationAcceleration -5
	runtime 3
	pause 0.5	
end

enemy "awesome enemy" // начало блока описания шаблона противника.
	set sprite "Enemy Sprite" // устаналивает для противника ранее загруженный спрайт. Если не использовать команду, то противник будет иметь стандартный предзагруженный спрайт. 
	set life 24 // устанавливает здоровье противника
	set velocity 100
	velocityToPoint 0, 0  // изменяет направление скорости в точку (0, 0). Скалярное значение скорости остаётся неизменным.
	set generator "awesome generator" // устанавливает для противника генератор снарядов, который он будет использовать.
	runtime 5
	clearGenerator // очищает список используемых противником генераторов снарядов.
	moveTo 0, 100, 2.5 // изменяет скорость противника для попадания в точку (0, 300) за 2.5 секунды. Не требует использования команды runtime после себя.
	set generator "awesome generator" 
	inc generator "awesome generator" // устанавливает еще один генератор снарядов, который будет использовать противник. Оба генератора работают одновременно.
end

level // начало блока описания шаблона уровня.
	for i 1, 10 // цикл, выполняющий вложенное тело 10 раз, изменяя параметр i от 1 до 10 (включительно) с шагом 1.
		spawn "awesome enemy", -200 + i * 20, 100 // размещает противника с указанным шаблоном в точке (-200 + i * 20, 100).
		for j 10, -10, 5  // цикл, выполняющий вложенное тело 5 раз, изменяя параметр j от 10 до -10 (включительно) с шагом -5.
			spawn "awesome enemy", -200 + i * 20, j // размещает противника с указанным шаблоном в точке (-200 + i * 20, j.)
		end
		pause 2 // устанавливает задержку 2 секунды перед следующим выполнением команды.
	end
end
